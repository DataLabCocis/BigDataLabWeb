<IfModule mod_rewrite.c>
    # Enable Rewrite Engine
    RewriteEngine On

    # ðŸ›‘ FIX FOR NESTED LARAVEL ASSETS ðŸ›‘
    # If the request is NOT for an existing directory or file (i.e., not a static asset or folder),
    # internally rewrite the path to start from the 'public/' subdirectory.
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    # This rule redirects everything to the 'public' folder first
    RewriteRule ^(.*)$ public/$1 [L]
    # ðŸ›‘ END OF FIX ðŸ›‘

    # Standard Laravel directives follow below (for when the request is already routed to 'public')

    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller... 
    # This is the original final rule, which will now execute on the 'public' folder's contents
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

</IfModule>